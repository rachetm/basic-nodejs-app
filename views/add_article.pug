extends layout

block content
    h1.mt-3 #{heading}
    form(method='POST', action='/articles/add')
        #form-group.pt-2
            label Title:
            input.form-control(name='title' type="text")
        #form-group.pt-4
            label Body:
            textarea.form-control(name='body')
        input.btn.btn-primary.mt-5(type='submit', value='Submit')